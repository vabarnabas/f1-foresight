generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Season {
  id    String @id @default(uuid())
  name  String
  races Race[]
}

model Race {
  id          String       @id @default(uuid())
  name        String
  country     String
  city        String
  countryCode String
  seasonId    String
  startDate   DateTime
  endDate     DateTime
  season      Season       @relation(fields: [seasonId], references: [id])
  predictions Prediction[]
}

model Team {
  id        String   @id @default(uuid())
  name      String
  teamColor String
  drivers   Driver[]
}

model Driver {
  id          String @id @default(uuid())
  fullName    String
  number      Int
  countryCode String
  teamId      String
  team        Team   @relation(fields: [teamId], references: [id])
}

model Prediction {
  id     String   @id @default(uuid())
  userId String
  name   String
  raceId String
  race   Race     @relation(fields: [raceId], references: [id])
  result String[]
}

model Analysis {
  id             String   @id @default(uuid())
  result         String[]
  raceId         String
  analysis       String
  goodArguments  String
  onTheOtherHand String
  conclusion     String

  @@unique([raceId, result])
}

model Quota {
  id         String @id @default(uuid())
  userId     String @unique
  usedAmount Int
}
